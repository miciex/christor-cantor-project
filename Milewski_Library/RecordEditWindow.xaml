<Window x:Class="Wolska_BookManager.BookEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wolska_BookManager"
        mc:Ignorable="d"
        Title="Record Details" Height="300" Width="400">
    <Grid Margin="10">
        <StackPanel>
            <TextBox x:Name="authorTextBox" Margin="5" Text="{Binding Author}"/>
            <TextBox x:Name="titleTextBox" Margin="5" Text="{Binding Title}"/>
            <TextBox x:Name="genreTextBox" Margin="5" Text="{Binding Genre}"/>
            <ComboBox x:Name="typeComboBox" Margin="5">
            </ComboBox>
            <TextBox x:Name="yearTextBox" Margin="5" Text="{Binding Year}"/>
            <Button Content="Zapisz" HorizontalAlignment="Center" Click="Save_Click"/>
        </StackPanel>
    </Grid>
</Window>
